<div class='intro'>
	<h1 class='intro__hed'>{{meta.title}}</h1>
	<p class='intro__dek'>{{meta.description}}</p>
	<p class='intro__byline'>By
		<a href='{{meta.author.url}}' target='_blank'><strong>{{meta.author.name}}</strong></a>, TWO-N
	</p>
	<time class='intro__time'>April 2020</time>

	<div class='intro__text-parent'>
		<div class='intro__imgs'>
			<img class='intro__img' src='assets/images/ss1790.png'>
			<img class='intro__img' src='assets/images/ss2010.png'>
			<img class='intro__img' src='assets/images/ss1950.png'>
			<img class='intro__img' src='assets/images/ss1900.png'>
			<img class='intro__img' src='assets/images/ss1850.png'>
		</div>
		{{#each textContent.introPara}}
		<p class='intro__text'>{{this}}</p>
		{{/each}}
	</div>

	<p class='intro__disclaimer'>{{textContent.disclaimer}}</p>
</div>